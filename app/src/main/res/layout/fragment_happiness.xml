<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HappinessFragment">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_nietzsche" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="338dp"
        android:layout_height="122dp"
        android:text="Happiness is the feeling that power increases that resistance is being overcome."
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:translationX="40dp"
        android:translationY="420dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friedrich Nietzsche"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:translationX="200dp"
        android:translationY="600dp" />


</FrameLayout>