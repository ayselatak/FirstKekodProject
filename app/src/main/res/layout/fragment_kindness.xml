<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KindnessFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindness is a language that the deaf can hear and the blind can see."
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        android:translationX="0dp"
        android:translationY="450dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_marktwain" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark Twain"
        android:textSize="20sp"
        android:textStyle="italic"
        android:translationX="200dp"
        android:translationY="600dp" />
    />

</FrameLayout>